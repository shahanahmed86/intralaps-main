{
	"name": "ts-node-server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "tsc",
		"postinstall": "echo 'installing husky....' && husky install",
		"dev": "cross-env NODE_ENV='development' nodemon --exec ts-node index.ts",
		"start": "cross-env NODE_ENV='production' node dist",
		"up": "docker-compose up -d",
		"down": "docker-compose down",
		"down:hard": "docker-compose down -v",
		"db:format": "prisma format",
		"predb:deploy": "yarn db:format",
		"db:deploy": "prisma migrate dev --name init",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"db:generate": "prisma generate",
		"lint": "eslint '**/*.ts'",
		"prettify": "prettier --no-editorconfig -l --write '**/*.ts'"
	},
	"lint-staged": {
		"**/*.ts": [
			"yarn prettify",
			"yarn lint"
		]
	},
	"prisma": {
		"seed": "node -r esm prisma/seed.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-fileupload": "^1.2.3",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/lodash": "^4.14.182",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.6.3",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"eslint": "^8.20.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"swagger-jsdoc": "^6.2.1",
		"swagger-ui-express": "^4.5.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@prisma/client": "4.1.1",
		"apollo-server-core": "^3.10.0",
		"apollo-server-express": "^3.10.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"esm": "^3.2.25",
		"express": "^4.18.1",
		"express-fileupload": "^1.4.0",
		"graphql": "^16.5.0",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"prisma": "^4.1.1",
		"uuid": "^8.3.2"
	}
}
