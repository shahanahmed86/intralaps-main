{
	"name": "ts-node-server",
	"version": "0.0.1",
	"description": "Boiler plate for nodejs application with graphql & express using typescript",
	"main": "index.js",
	"scripts": {
		"prebuild": "npm run prettify && npm run lint && npm run test && rm -rf dist",
		"build": "tsc",
		"prepare": "echo 'installing husky....' && husky install",
		"dev": "cross-env NODE_ENV='development' nodemon --exec ts-node index.ts",
		"prestart": "npm run build",
		"start": "cross-env NODE_ENV='production' node dist",
		"up:dev": "make run-dev-up",
		"down:dev": "make run-dev-down",
		"down:dev_hard": "make run-dev-down-hard",
		"up:prod": "make run-prod-up",
		"down:prod": "make run-prod-down",
		"db:format": "prisma format",
		"predb:deploy": "npm run db:format",
		"db:deploy": "prisma migrate dev --name init",
		"postdb:deploy": "npm run db:seed",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"db:generate": "prisma generate",
		"lint": "eslint '**/*.ts'",
		"prettify": "prettier --no-editorconfig -l --write '**/*.ts'",
		"test": "mocha -r ts-node/register 'src/tests/**/*.test.ts' --exit"
	},
	"lint-staged": {
		"**/*.ts": [
			"npm run prettify",
			"npm run lint",
			"npm run test"
		]
	},
	"prisma": {
		"seed": "node prisma/seed.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shahanahmed86/ts-node-server.git"
	},
	"keywords": [
		"typescript",
		"boiler-plate",
		"nodejs",
		"apollo server express",
		"apollo server"
	],
	"author": "Shahan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/shahanahmed86/ts-node-server.git/issues"
	},
	"homepage": "https://github.com/shahanahmed86/ts-node-server.git#readme",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.3.1",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-fileupload": "^1.2.3",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/lodash": "^4.14.182",
		"@types/mocha": "^9.1.1",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.6.3",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"chai": "^4.3.6",
		"eslint": "^8.20.0",
		"lint-staged": "^13.0.3",
		"mocha": "^10.0.0",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"swagger-jsdoc": "^6.2.1",
		"swagger-ui-express": "^4.5.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@graphql-tools/schema": "^8.5.1",
		"@graphql-tools/utils": "^8.9.0",
		"@prisma/client": "4.1.1",
		"@types/uuid": "^8.3.4",
		"apollo-server-core": "^3.10.0",
		"apollo-server-express": "^3.10.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-fileupload": "^1.4.0",
		"graphql": "^16.5.0",
		"husky": "^8.0.1",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"prisma": "^4.1.1",
		"uuid": "^8.3.2"
	}
}
